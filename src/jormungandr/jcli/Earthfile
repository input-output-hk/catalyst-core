VERSION 0.7

build:
    FROM ../../../+builder
    RUN cargo build --locked --release --bin jcli

    # Store the artifact
    SAVE ARTIFACT target/release/jcli jcli
    SAVE IMAGE --cache-hint

docker:
    FROM ../../../+deployment

    WORKDIR /app
    ARG tag="latest"
    ARG registry

    COPY +build/jcli .

    ENTRYPOINT ["/app/jcli"]
    SAVE IMAGE ${registry}jcli:$tag

VERSION 0.7

build:
    FROM ../../../+build-workspace
    RUN with_nix cargo build --locked --release --bin jormungandr

    # Collect linked libraries to a common location and patch the binary
    RUN mkdir deps && with_nix collect-libs target/release/jormungandr deps
    RUN with_nix patchelf --set-rpath /app/deps target/release/jormungandr
    RUN with_nix patchelf --set-interpreter /app/deps/ld-linux-x86-64.so.2 target/release/jormungandr

    # Store the artifact and deps in a temporary directory, so that it can be
    # used as a dependency
    SAVE ARTIFACT deps
    SAVE ARTIFACT target/release/jormungandr jormungandr

docker:
    FROM debian:stable-slim

    WORKDIR /app
    ARG tag="latest"
    ARG registry

    COPY +build/jormungandr .
    COPY +build/deps ./deps

    ENV LD_LIBRARY_PATH=/app/deps
    ENTRYPOINT ["/app/jormungandr"]
    SAVE IMAGE ${registry}jormungandr:$tag
